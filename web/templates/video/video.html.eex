<div>
  <video id="main-video" src="/stream/<%= @stream_id %>"
    controls></video>
  <h1 id="caption"></h1>

  <span id="user" class="hangout">
    <video autoplay muted></video>
    <div class="mute"></div>
  </span>

  <span id="partner" class="hangout">
    <video autoplay></video>
  </span>

</div>

<div>
  <div id="controller" class="btn">
    Take control
  </div>
</div>

<script>
  window.onload = function() {
    require("web/static/js/video").run()
  }
</script>
